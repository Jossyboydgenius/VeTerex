{
  "manifest_version": 3,
  "name": "VeTerex",
  "description": "Track and verify your media consumption achievements with blockchain-verified NFTs",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "VeTerex - Media Achievement Tracker"
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "optional_permissions": [
    "history"
  ],
  "host_permissions": [
    "https://*.wepin.io/*",
    "https://gapi.veryapi.io/*"
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://*.netflix.com/*",
    "https://*.youtube.com/*",
    "https://*.primevideo.com/*",
    "https://*.amazon.com/*",
    "https://*.disneyplus.com/*",
    "https://*.hulu.com/*",
    "https://*.crunchyroll.com/*",
    "https://*.goodreads.com/*",
    "https://*.mangadex.org/*",
    "https://*.myanimelist.net/*",
    "https://*.anilist.co/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.netflix.com/*",
        "https://*.youtube.com/watch*",
        "https://*.youtube.com/shorts/*",
        "https://*.primevideo.com/*",
        "https://*.amazon.com/gp/video/*",
        "https://*.disneyplus.com/*",
        "https://*.hulu.com/watch/*",
        "https://*.crunchyroll.com/watch/*",
        "https://*.webtoons.com/*",
        "https://filmboom.top/*",
        "https://*.goodreads.com/book/*",
        "https://*.mangadex.org/chapter/*",
        "https://*.myanimelist.net/anime/*",
        "https://*.anilist.co/anime/*"
      ],
      "js": ["src/content/media-tracker.ts"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
