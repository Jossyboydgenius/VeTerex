{
  "manifest_version": 3,
  "name": "VeTerex",
  "description": "Track and verify your media consumption achievements with blockchain-verified NFTs",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "VeTerex - Media Achievement Tracker"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://*.wepin.io/*",
    "https://gapi.veryapi.io/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
